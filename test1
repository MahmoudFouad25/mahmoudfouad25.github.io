            <div class="action-buttons">
                <button class="btn btn-primary" id="confirmButton" onclick="confirmChoice()" disabled>
                    تأكيد اختياري
                </button>
            </div>
            
            <div class="helper-message">
                🌿 أياً كان اختيارك، المهم أن تبدأ. الطريق يتضح بالمشي، والنور يأتي مع الخطوة الأولى.
            </div>
        </section>
    </div>
    
    <script>
        let selectedJourney = null;
        
        function selectJourney(journey, element) {
            // إزالة التحديد السابق
            document.querySelectorAll('.journey-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // تحديد الخيار الجديد
            element.classList.add('selected');
            selectedJourney = journey;
            
            // إظهار قسم التبرير
            const justificationSection = document.getElementById('justificationSection');
            const justificationLabel = document.getElementById('justificationLabel');
            const justificationInput = document.getElementById('justificationInput');
            
            justificationSection.classList.add('active');
            justificationInput.value = ''; // مسح أي نص سابق
            
            // تخصيص السؤال حسب الاختيار
            if (journey === 'mixed') {
                justificationLabel.textContent = 'ممتاز! المسار المتدرج يبدو مناسباً لك. ما أكثر ما أعجبك فيه؟';
            } else if (journey === 'eshraq') {
                justificationLabel.textContent = 'أفهمك، التركيز على الحل العاجل أولوية. هل تفكر في احتمالية المتابعة لاحقاً أم تريد فقط حل التحدي الحالي؟';
            } else if (journey === 'baseera') {
                justificationLabel.textContent = 'قرار جريء! القفز مباشرة للعمق. ما الذي يجعلك واثقاً من قدرتك على إدارة التحدي الحالي بينما تعمل على الأنماط العميقة؟';
            } else {
                justificationLabel.textContent = 'أحترم رؤيتك الخاصة. صف لي التصور الذي في ذهنك؟';
            }
            
            // تفعيل زر التأكيد بعد كتابة شيء
            justificationInput.addEventListener('input', function() {
                const confirmButton = document.getElementById('confirmButton');
                if (this.value.trim().length > 10) {
                    confirmButton.disabled = false;
                } else {
                    confirmButton.disabled = true;
                }
            });
        }
        
        function confirmChoice() {
            const justification = document.getElementById('justificationInput').value;
            
            // حفظ الاختيار والتبرير
            const finalChoice = {
                recommendedJourney: 'mixed', // التوصية الأصلية
                selectedJourney: selectedJourney,
                justification: justification,
                timestamp: new Date().toISOString()
            };
            
            // حفظ في localStorage للاستخدام في الصفحة التالية
            localStorage.setItem('journeyChoice', JSON.stringify(finalChoice));
            
            // الانتقال لصفحة الحجز أو إكمال العملية
            alert('تم تسجيل اختيارك! سيتم تحويلك الآن...');
            // window.location.href = 'booking-confirmation.html';
        }
    </script>
</body>
</html>
